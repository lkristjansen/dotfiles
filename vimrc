set nocompatible

" syntax and colorscheme.
syntax on
colorscheme jellybeans
set t_Co=256
set cursorline

" show linenumbers.
set number

" use 2 spaces no tabs.
set shiftwidth=2
set tabstop=2
set expandtab
set autoindent
set smartindent

" status line.
set ruler
set laststatus=2
set showcmd

" window size min 80x20.
set winwidth=80
set winheight=20

set scrolloff=5

" enable mouse in all modes.
set mouse=a

" don't reset cursor when moving between lines.
set nostartofline

" disable backup
set nobackup
set nowritebackup
set noswapfile

" search incremental and highlight.
set incsearch
set hlsearch

" please be quiet.
set noerrorbells

" show filename
set title

" show current mode.
set showmode

" make comma be leader.
let mapleader=","

